{% extends "UbbIssBundle:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ubbiss/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('bundles/ubbiss/css/custom.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('bundles/ubbiss/css/full.css') }}" type="text/css" rel="stylesheet">
{% endblock %}


{% block content %}

    <div>
        <div class="otherText" style="font-style:italic">Add Grades</div>
        <div class="tableText">SELECT SUBJECT:</div>
        <br>
        <div class="smallerTable">
        <table class="table table-bordered">
            {% for act in activities %}
                <tr class="insideText"><td><a href = "{{ path("ubb_iss_study_lines", {'SubName':act.getSubject().getId(), 'SpecName':act.getSubject().getSpecialization()}  ) }}">{{ act.getSubject() }} ( {{ act.getSubject().getSpecialization() }} )</a></td></tr>
            {% endfor %}
        </table>
        </div>
    </div>

{% endblock %}
